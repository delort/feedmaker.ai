.icon {
    display: inline-block;
    width: 24px;
    height: 24px;
    color: currentColor;

    &--size-8 {
        width: 8px;
        height: 8px;
    }

    &--size-12 {
        width: 12px;
        height: 12px;
    }

    &--size-18 {
        width: 18px;
        height: 18px;
    }

    &--size-20 {
        width: 20px;
        height: 20px;
    }
}
