.articles {
    padding: 60px 0;

    &__header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    &__title {
        @mixin font-headline-l;
        margin: 0 auto;
        text-align: center;
    }

    &__items {
        display: grid;
        margin-top: 40px;
        grid-gap: var(--container-gap);

        @media (--lg-up) {
            grid-template-columns: repeat(3, 1fr);
        }
    }
}
