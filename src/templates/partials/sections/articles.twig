{% set section = global.sections.articles %}

<section class="articles">
    <div class="container">
        {% if section.title %}
            <h1 class="articles__title">{{ section.title }}</h1>
        {% endif %}
        {% if section.items|length %}
            <div class="articles__items">
                {% for item in section.items %}
                    <article class="article">
                        <a href="{{ item.link }}" class="article__poster">
                            <img
                                src="{{ item.image.path }}" alt="{{ item.image.title ?? item.title }}"
                            />
                        </a>
                        <div class="article__categories">
                            <a href="#">Team</a>
                        </div>
                        <a href="{{ item.link }}" class="article__title">{{ item.title }}</a>
                    </article>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</section>
