<section class="hero">
    <div class="container">
        {% if data.title %}
            <h1 class="hero__title">{{ data.title }}</h1>
        {% endif %}
        {% if data.description %}
            <div class="paragraph hero__paragraph">
                <p>{{ data.description }}</p>
            </div>
        {% endif %}
        {% if data.actions|length %}
            <div class="hero__actions">
                {% for action in data.actions %}
                    <a href="{{ action.link }}" class="btn btn--{{ action.style }}">{{ action.label }}</a>
                {% endfor %}
            </div>
        {% endif %}
    </div>
    <div class="hero__images">
        <svg
            class="hero__mockup"
            viewBox="0 0 840 480"
            preserveAspectRatio="xMinYMin meet"
            xmlns="http://www.w3.org/2000/svg"
        >
            <foreignObject width="100%" height="100%" xmlns="http://www.w3.org/1999/xhtml">
                <body xmlns="http://www.w3.org/1999/xhtml">
                    <img src="images/hero-main.png" alt="Main" />
                    <img src="images/hero-header.png" alt="Header" />
                    <img src="images/hero-sidebar-left.png" alt="Sidebar left" />
                    <img src="images/hero-sidebar-right.png" alt="Sidebar right" />
                    <img src="images/hero-template.png" alt="Template" />
                </body>
            </foreignObject>
        </svg>
    </div>
    <div class="container">
        {% if data.logos_description %}
            <div class="paragraph">
                <p>{{ data.logos_description }}</p>
            </div>
        {% endif %}
        {% if data.logos|length %}
            <div class="hero__logos">
                {% for logo in data.logos %}
                    <img src="{{ logo.path }}" alt="Logo placeholder" />
                {% endfor %}
            </div>
        {% endif %}
    </div>
</section>
