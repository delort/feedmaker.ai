<footer class="footer">
    <div class="container">
        <div class="footer__content">
            <div class="footer__menu">
                {% for item in global.footer_menu %}
                    <div class="footer__block {{ item.class }}">
                        <h2 class="footer__title">{{ item.label }}</h2>
                        {% if item.items|length %}
                            <ul class="footer__list">
                                {% for subitem in item.items %}
                                    <li><a href="{{ subitem.link }}">{{ subitem.label }}</a></li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </div>
                {% endfor %}
                <div class="footer__block">
                    <h2 class="footer__title">Language</h2>
